@model IEnumerable<TP01_21_22_TURNO_02.Livro>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Registar Livro</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.autores)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.editora)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.autores)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.editora)
            </td>
            <td>
                <a asp-action="Delete" asp-route-id="@item.ISBN">Remover</a>
            </td>
        </tr>
}
    </tbody>
</table>
